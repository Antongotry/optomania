{{ header }}
<div id="account-recurring" class="container-xl flex-grow-1">
	<nav aria-label="breadcrumb">
        <ul class="breadcrumb pr-breadcrumb fsz-12">
        {% for breadcrumb in breadcrumbs %}
            {% if loop.last %}
                <li class="breadcrumb-item pr-breadcrumb-item">{{ breadcrumb.text }}</li>
            {% else %}
                <li class="breadcrumb-item pr-breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
            {% endif %}
        {% endfor %}
        </ul>
    </nav>
	<main>
		<div class="content-top-box">{{ content_top }}</div>
        <div class="row g-3 g-xxl-4 pr-account">
			{{ column_left }}
		    {% if column_left and column_right %}
		    	{% set class = 'col-xl-6' %}
		    {% elseif column_left or column_right %}
		    	{% set class = 'col-xl-9' %}
		    {% else %}
		    	{% set class = 'col-xl-12' %}
		    {% endif %}
		    <div id="content" class="{{ class }}">
                <div class="content-block pr-account-page">
                    <div class="pr-page-title mb-3 mb-xl-4 d-flex align-items-center gap-3">
						<h1>{{ heading_title }}</h1>
					</div>
					<div class="mt-3 p-3 br-8 border">
						<div class="h2 mt-0 mb-3">{{ text_recurring_detail }}</div>
						<div class="pr-account-text">
							<div class="pr-account-text-order">{{ text_order_recurring_id }}:<span class="dark-text">#{{ order_recurring_id }}</span></div>
							<div class="pr-account-text-order">{{ text_date_added }}:<span class="dark-text">{{ date_added }}</span></div>
							<div class="pr-account-text-order">{{ text_status }}:<span class="dark-text">{{ status }}</span></div>
							<div class="pr-account-text-order">{{ text_payment_method }}:<span class="dark-text">{{ payment_method }}</span></div>
							<div class="pr-account-text-order">{{ text_order_id }}:<span class="dark-text"><a href="{{ order }}">#{{ order_id }}</a></span></div>
							<div class="pr-account-text-order">{{ text_product }}:<span class="dark-text"><a href="{{ product }}">#{{ product_name }}</a></span></div>
							<div class="pr-account-text-order">{{ text_quantity }}:<span class="dark-text">{{ product_quantity }}</span></div>
						</div>
					</div>
					<div class="mt-3 p-3 br-8 border">
						<div class="h2 mb-3">{{ text_description }}</div>
						<div class="pr-account-text">
							<div class="pr-account-text-order">{{ recurring_description }}</div>
						</div>
					</div>
					<div class="mt-3 p-3 br-8 border">
						<div class="h2 mb-3">{{ text_reference }}</div>
						<div class="pr-account-text">
							<div class="pr-account-text-order">{{ reference }}</div>
						</div>
					</div>
					<div class="h2 mt-3 mb-1">{{ text_transaction }}</div>
				    <div class="table-responsive fsz-14 fw-300 br-8">
				        <table class="table table-hover table-bordered">
				          <thead class="thead-dark">
				            <tr>
				              <th>{{ column_date_added }}</th>
				              <th>{{ column_type }}</th>
				              <th>{{ column_amount }}</th>
				            </tr>
				          </thead>
				          <tbody>
				          {% if transactions %}
				          {% for transaction in transactions %}
				          <tr>
				            <td>{{ transaction.date_added }}</td>
				            <td>{{ transaction.type }}</td>
				            <td>{{ transaction.amount }}</td>
				          </tr>
				          {% endfor %}
				          {% else %}
				          <tr>
				            <td colspan="3" class="text-center">{{ text_no_results }}</td>
				          </tr>
				          {% endif %}
				            </tbody>
				        </table>
				    </div>
					{{ recurring }}
			    </div>
			    {{ column_right }}
			</div>
		</div>
		{{ content_bottom }}
	</main>
</div>
{{ footer }}
