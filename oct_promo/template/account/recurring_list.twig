{{ header }}
<div id="account-recurring" class="container-xl flex-grow-1">
	<nav aria-label="breadcrumb">
        <ul class="breadcrumb pr-breadcrumb fsz-12">
        {% for breadcrumb in breadcrumbs %}
            {% if loop.last %}
                <li class="breadcrumb-item pr-breadcrumb-item">{{ breadcrumb.text }}</li>
            {% else %}
                <li class="breadcrumb-item pr-breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
            {% endif %}
        {% endfor %}
        </ul>
    </nav>
	<main>
		<div class="content-top-box">{{ content_top }}</div>
		<div class="row g-3 g-xxl-4 pr-account">
			{{ column_left }}
		    {% if column_left and column_right %}
		    	{% set class = 'col-xl-6' %}
		    {% elseif column_left or column_right %}
		    	{% set class = 'col-xl-9' %}
		    {% else %}
		    	{% set class = 'col-xl-12' %}
		    {% endif %}
		    <div id="content" class="{{ class }}">
				<div class="content-block">
                    <div class="pr-page-title mb-3 mb-xl-4 d-flex align-items-center gap-3">
						<h1>{{ heading_title }}</h1>
					</div>
					{% if recurrings %}
						<div class="table-responsive fsz-14 fw-300 br-8">
							<table class="table table-hover table-bordered">
								<thead>
									<tr>
									<th>{{ column_order_recurring_id }}</th>
									<th>{{ column_product }}</th>
									<th>{{ column_status }}</th>
									<th>{{ column_date_added }}</th>
									</tr>
								</thead>
								<tbody>
									{% for recurring in recurrings %}
										<tr>
											<td><a href="{{ recurring.view }}" class="blue-link">#{{ recurring.order_recurring_id }}</a></td>
											<td>{{ recurring.product }}</td>
											<td>{{ recurring.status }}</td>
											<td>{{ recurring.date_added }}</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
						<div class="text-center">{{ pagination }}</div>
					{% else %}
						<div class="fw-500 mb-3 dark-text">{{ text_empty }}</div>
					{% endif %}
					<a href="{{ continue }}" class="button button-secondary button-large">{{ button_continue }}</a>
			    </div>
		    </div>
		    {{ column_right }}
		</div>
		{{ content_bottom }}
	</main>
</div>
{{ footer }}
