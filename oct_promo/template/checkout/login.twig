<div class="row">
	<div class="col-sm-6 d-flex flex-column">
	    <div class="dark-text fw-700 mb-3">{{ text_new_customer }}</div>
	    <div class="mb-3 fsz-14">{{ text_checkout }}</div>
	    <div class="form-group mb-3">
		    <div class="form-check d-flex align-items-center gap-2">
				{% if account == 'register' %}
					<input type="radio" id="checkout_register" name="account" value="register" checked="checked" class="form-check-input" />
				{% else %}
					<input type="radio" id="checkout_register" name="account" value="register" class="form-check-input" />
				{% endif %}
		    	<label for="checkout_register" class="form-check-label fsz-12 dark-text">
			        {{ text_register }}
		        </label>
		    </div>
		    {% if checkout_guest %}
		    <div class="form-check d-flex align-items-center gap-2 mt-2">
				{% if account == 'guest' %}
				<input type="radio" id="checkout_guest" name="account" value="guest" checked="checked" class="form-check-input" />
				{% else %}
				<input type="radio" id="checkout_guest" name="account" value="guest" class="form-check-input" />
				{% endif %}
		    	<label for="checkout_guest" class="form-check-label fsz-12 dark-text">
			        {{ text_guest }}
		        </label>
		    </div>
		    {% endif %}
		</div>
	    <div class="mb-3 fsz-14">{{ text_register_account }}</div>
	    <input type="button" value="{{ button_continue }}" id="button-account" data-loading-text="{{ text_loading }}" class="button button-primary mt-auto align-self-start d-inline-flex w-auto" />
	</div>
	<div class="col-sm-6 pt-4 pt-md-0">
	    <div class="dark-text fw-700 mb-3">{{ text_returning_customer }}</div>
	    <div class="mb-2 fsz-14">{{ text_i_am_returning_customer }}</div>
	    <div class="form-floating mb-3">
		    <input type="text" name="email" value="" placeholder="{{ entry_email }}" id="input-email" class="form-control" />
		    <label for="input-email" class="px-3 secondary-text fsz-14">{{ entry_email }}</label>
	    </div>
	    <div class="form-floating">
		    <input type="password" name="password" value="" placeholder="{{ entry_password }}" id="input-password" class="form-control" />
		    <label for="input-password" class="px-3 secondary-text fsz-14">{{ entry_password }}</label>
			<a class="blue-link fsz-12" href="{{ forgotten }}">{{ text_forgotten }}</a>
		</div>
		<input type="button" value="{{ button_login }}" id="button-login" data-loading-text="{{ text_loading }}" class="button button-primary br-7 mt-3" />
	</div>
</div>
