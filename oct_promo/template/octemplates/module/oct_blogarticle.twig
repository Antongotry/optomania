{% if articles %}
	{% if position == 'column_left' or position == 'column_right' %}
		<div class="pr-column-news">
			<div class="pr-column-title pb-3 dark-text fw-700 fsz-20">{{ heading_title }}</div>
			<div id="ds_blog_column_article-{{ module }}" class="swiper pr-column-news-items swiper-column-news br-12 overflow-hidden">
				<div class="swiper-wrapper">
					{% for article in articles %}
						<div class="swiper-slide pr-module-news-item content-block p-0 d-flex flex-column overflow-hidden">
							<div class="pr-module-news-item-image">
								<a href="{{ article.href }}" title="{{ article.name }}"><img class="img-fluid" src="{{ article.thumb }}" alt="{{ article.name }}" width="{{ article.width }}"  height="{{ article.height }}" loading="lazy"></a>
							</div>
							<div class="pr-module-news-item-caption d-flex flex-column justify-content-between gap-3 p-3 h-100">
								<a href="{{ article.href }}" class="pr-module-news-item-title dark-link fw-700 fsz-14 lh-sm">{{ article.name }}</a>
								<div class="pr-module-news-item-info d-flex align-items-center justify-content-between gap-3 fsz-12 grey-text mt-auto">
									<div class="pr-module-news-item-info-date d-flex align-items-center gap-1">
