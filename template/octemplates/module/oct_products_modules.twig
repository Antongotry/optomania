                                    </svg>
                                    <span class="pr-module-item-rating-count ms-1 fsz-12 fw-500 dark-text">{{ product.reviews }}</span>
                                </div>
                            {% endif %}
                            <div class="pr-module-item-price-box d-flex gap-3 justify-content-between mt-auto position-relative">
                                {% if product.price %}
                                    <div class="pr-module-item-price d-flex flex-column gap-1">
                                        {% if product.tax %}
                                        <div class="price-tax fw-300 fsz-12 light-text mb-1">
                                            {{ text_tax }} {{ product.tax }}
                                        </div>
                                        {% endif %}
                                        {% if not product.special %}
                                            <div class="pr-price-new fsz-20 fw-700 dark-text">{{ product.price }}</div>
                                        {% else %}
                                            <div class="pr-module-item-price-old d-flex gap-2 align-items-center">
                                                <span class="grey-text text-decoration-line-through fsz-14 fw-500">{{ product.price }}</span>
                                                {% if oct_sticker_you_save and product.you_save %}
                                                    <div class="pr-module-item-price-sale px-1 fsz-10 br-4 bg-red fw-600 white-text">{{ product.you_save }}</div>
                                                {% endif %}
                                            </div>
                                            <span class="pr-price-new pr-module-item-price-new fw-600 fsz-22">{{ product.special }}</span>
                                        {% endif %}
                                    </div>
                                {% endif %}
                                {% if product.can_buy is not empty and product.can_buy %}
                                    <div class="button button-primary button-cart">
                                        {% if product.can_buy and quantity_show %}
                                            <div class="buttons-quantity button-quantity d-none d-lg-flex">
                                                <input type="text" class="number fw-500 border-0 p-0 text-center fsz-12 fw-500" name="quantity" value="{% if product.minimum %}{{ product.minimum }}{% else %}1{% endif %}" aria-label="Quantity" />
                                                <div class="controls d-flex flex-column">
                                                    <button type="button" aria-label="Plus" class="plus p-0" onclick="changeQuantity(this, 'increase')">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="6" height="6" viewBox="0 0 6 6" fill="none">
                                                            <path d="M3.40002 0.997314V4.99731M1.40002 2.99731H5.40002" stroke="#E5E9EF" stroke-linecap="round" stroke-linejoin="round"></path>
                                                        </svg>
                                                    </button>
                                                    <button type="button" aria-label="Minus" class="minus p-0" onclick="changeQuantity(this, 'decrease')">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="6" height="2" viewBox="0 0 6 2" fill="none">
                                                            <path d="M1.40002 0.999023H5.40002" stroke="#E5E9EF" stroke-linecap="round" stroke-linejoin="round"></path>
                                                        </svg>
                                                    </button>
                                                </div>
                                            </div>
                                        {% endif %}
                                        <span class="button-icon button-icon-cart"></span>
                                        <span class="button-text">{{ button_cart }}</span>
                                        <input type="hidden" name="product_id" value="{{ product.product_id }}" />
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        {% if product.oct_atributes is defined and product.oct_atributes %}
                            <div class="pr-module-attributes fsz-12 dark-text d-none d-md-flex flex-column gap-2">
                                {% for attribute in product.oct_atributes %}
                                <div class="pr-module-attributes-item d-flex justify-content-between gap-2">
                                    <span class="grey-text">{{ attribute.name }}:</span>
                                    <span>{{ attribute.text }}</span>
                                </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
            {% if show_more is defined and show_more and show_type != 'width-infinity' %}
                <div class="pr-module-show-more d-flex justify-content-center py-3 py-xl-4">
                    <div class="oct-load-more-button-wrapper w-100 d-flex align-items-center justify-content-center">
                        <input type="hidden" id="more_{{ module_name }}_{{ module }}" name="more_{{ module_name }}_{{ module }}" value="{{ page }}">
                        <button id="btn_{{ module_name }}_{{ module }}" class="button button-success button-large fsz-14 br-8">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="15" viewBox="0 0 18 17" fill="none">
                            <path d="M16.5448 11.1667C15.4466 14.2738 12.4833 16.5 9 16.5C4.58172 16.5 1 12.9183 1 8.5C1 4.08172 4.58172 0.5 9 0.5C13 0.5 14.7778 3.16667 17 5.38889M12.5556 5.38889L16.9991 5.38982V0.944444" stroke="#FFFDFF" stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                        {{ oct_show_more }}
                        </button>
                    </div>
                </div>
                <script>
                    document.addEventListener('DOMContentLoaded', () => {
                        document.getElementById('more_{{ module_name }}_{{ module }}').value = 1;

                        const btn = document.getElementById('btn_{{ module_name }}_{{ module }}');

                        btn.addEventListener('click', () => {
                            octShowMoreModule(
                            '{{ module_id }}',
                            true,
                            'btn_{{ module_name }}_{{ module }}',
                            'pr-{{ module_name }}_{{ module }}',
                            'more_{{ module_name }}_{{ module }}',
                            '{{ oct_path }}'
                            );
                        });
                        
                        {% if infinite_scroll is defined and infinite_scroll %}
                        
                            const observer = new IntersectionObserver((entries) => {
                                entries.forEach(entry => {
                                if (entry.isIntersecting) {
                                    btn.click();
                                }
                                });
                            }, {
                                root: null,
                                rootMargin: '0px',
                                threshold: 0.5
                            });

                            observer.observe(btn);
                        
                        {% endif %}
                    });
                </script>
            {% endif %}
        </div>
    {% endif %}
{% endif %}
