    {% if position == 'column_left' or position == 'column_right' %}
        <div class="pr-column-products">
            <div class="pr-column-title pb-3 dark-text fw-700 fsz-20">
                {% if link is defined and link %}
                    <a href="{{ link }}">
                        {{ heading_title }}
                    </a>
                {% else %}
                    {{ heading_title }}
                {% endif %}
            </div>
            <div id="pr-column-{{ module_name }}_{{ module }}" class="swiper pr-column-products-items swiper-column-products br-12 overflow-hidden">
                <div class="swiper-wrapper">
                    {% for product in products %}
